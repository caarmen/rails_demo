<div class="">
  <h1 class="text-center mb-4 text-4xl"><%= t('user.heading_list') %></h1>
  <div class="mb-2"><%= t('user.count', count:@count) %></div>
  <div class="">
    <label for="sort-field"><%= t('user.label_sort') %></label>
    <select class="select select-bordered mb-2" id="sort-field" name="sort" onchange="window.location.href=this.value">
      <option value="<%= users_path(sort: 'name')%>" <%='selected' if @sort_field == 'name' %>><%= t('user.label_sort_item_name')%></option>
      <option value="<%= users_path(sort: 'age')%>" <%='selected' if @sort_field == 'age'%>><%= t('user.label_sort_item_age')%></option>
      <option value="<%= users_path(sort: 'updated_at')%>" <%='selected' if @sort_field == 'updated_at'%>><%= t('user.label_sort_item_updated_at')%></option>
    </select>
  </div>
  <div class="">
    <% @users.each do |user| %>
    <div class="card card-compact hover:scale-110 ease-in-out hover:-translate-y-1 duration-300 bg-base-100 base-content shadow-md mb-4">
      <div class="card-body">
        <div class="card-title text-primary justify-center !mb-0"><%= user.name %></div>
        <div class="divider my-0"></div>
        <div class="">
          <strong><%= t('user.label_age') %></strong><%= user.age %>
        </div>
        <div class="">
          <strong><%= t('user.label_updated_at') %></strong><%= format_updated_at(user) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
